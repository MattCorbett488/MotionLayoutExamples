<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/horizontal_flow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal Flow"
        app:layout_constraintBottom_toTopOf="@+id/vertical_flow_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/vertical_flow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertical Flow"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_flow_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/layer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layer"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/image_filter_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertical_flow_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/image_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Filter"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/custom_helper_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layer_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/custom_helper_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Helper"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/motion_layout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_filter_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/motion_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MotionLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_helper_button" />
</androidx.constraintlayout.widget.ConstraintLayout>