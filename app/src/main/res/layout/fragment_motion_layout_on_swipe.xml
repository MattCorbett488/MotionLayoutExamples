<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_motion_layout_on_swipe_scene"
    tools:context=".motionlayout.MotionLayoutOnSwipeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spike_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spiked_ball" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/climber"
        android:src="@drawable/mario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nerd" />
</androidx.constraintlayout.motion.widget.MotionLayout>